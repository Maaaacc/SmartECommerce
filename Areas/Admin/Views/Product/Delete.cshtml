@model SmartECommerce.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this product?</h3>

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content($"~/images/products/{Model.ImageUrl}")" class="img-fluid rounded-start" alt="@Model.Name" />
            }
            else
            {
                <img src="~/images/no-image.png" class="img-fluid rounded-start" alt="No image" />
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
                <p class="card-text"><strong>Stock:</strong> @Model.Stock</p>
                <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
