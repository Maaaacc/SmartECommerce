@model SmartECommerce.Models.Order

<div class="container-fluid py-4">

    <!-- Header: Title, Status, Back Button -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="mb-2 mb-md-0">
            <h1 class="h3 mb-1">Order <span class="text-primary">#@Model.Id</span></h1>
            <p class="text-muted mb-0">
                Placed on @Model.OrderPlacedAt?.ToLocalTime().ToString("MMM dd, yyyy 'at' hh:mm tt")
            </p>
        </div>

        <div class="d-flex align-items-center gap-2">
            <span class="badge fs-5
                @(Model.Status == OrderStatus.OrderPlaced ? "bg-warning text-dark" :
                Model.Status == OrderStatus.Processing ? "bg-info text-white" :
                Model.Status == OrderStatus.Completed ? "bg-success" :
                Model.Status == OrderStatus.Cancelled ? "bg-danger text-white" : "")">
                @Model.Status
            </span>

            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>Back to Orders
            </a>
        </div>
    </div>

    <!-- Cards Row -->
    <div class="row g-4">

        <!-- Order Summary Card -->
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Customer:</span>
                        <strong>@(Model.User?.UserName ?? Model.User?.Email ?? "N/A")</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Order Date:</span>
                        <strong>@Model.OrderPlacedAt?.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Total:</span>
                        <span class="h5 text-success fw-bold">$@Model.TotalAmount.ToString("0.00")</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.PaymentMethod.ToString()))
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>Payment:</span>
                            <span class="badge bg-light text-dark">@Model.PaymentMethod</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Shipping Info Card -->
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-truck me-2"></i>
                        @(Model.User?.ShippingInfo != null ? "Shipping Information" : "No Shipping Info")
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.User?.ShippingInfo != null)
                    {
                        <div class="row g-2">
                            <div class="col-12">
                                <div class="d-flex justify-content-between flex-wrap align-items-center mb-1">
                                    <h6 class="fw-bold mb-0">@Model.User.ShippingInfo.RecipientName</h6>
                                    <div class="d-flex align-items-center mt-1 mt-md-0">
                                        <i class="bi bi-telephone text-muted"></i>
                                        <span class="ms-2">@Model.User.ShippingInfo.PhoneNumber</span>
                                    </div>
                                </div>

                                <p class="mb-1">@Model.User.ShippingInfo.AddressLine1</p>
                                @if (!string.IsNullOrEmpty(Model.User.ShippingInfo.AddressLine2))
                                {
                                    <p class="mb-1">@Model.User.ShippingInfo.AddressLine2</p>
                                }
                                <p class="mb-1">@Model.User.ShippingInfo.City, @Model.User.ShippingInfo.State @Model.User.ShippingInfo.ZipCode</p>
                                <p class="mb-0 text-muted">@Model.User.ShippingInfo.Country</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-info-circle fs-1 mb-3 opacity-75"></i>
                            <p class="mb-0">No shipping information available for this order.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

    <!-- Timeline -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Order Status Timeline</h5>
                    <a asp-action="OrderStatusLogs" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-journal-text me-1"></i>View Logs
                    </a>
                </div>
                <div class="card-body py-3">
                    <div class="timeline">
                        @foreach (var step in new[] { OrderStatus.OrderPlaced, OrderStatus.Processing, OrderStatus.Completed, OrderStatus.Cancelled })
                        {
                            var hasValue = step switch
                            {
                                OrderStatus.OrderPlaced => Model.OrderPlacedAt.HasValue,
                                OrderStatus.Processing => Model.ProcessingAt.HasValue,
                                OrderStatus.Completed => Model.CompletedAt.HasValue,
                                OrderStatus.Cancelled => Model.CancelledAt.HasValue,
                                _ => false
                            };
                            if (!hasValue) continue;

                            var activeClass = step <= Model.Status ? "active" : "";
                            var markerClass = step switch
                            {
                                OrderStatus.OrderPlaced => "bg-warning",
                                OrderStatus.Processing => "bg-info",
                                OrderStatus.Completed => "bg-success",
                                OrderStatus.Cancelled => "bg-danger",
                                _ => "bg-secondary"
                            };
                            var title = step switch
                            {
                                OrderStatus.OrderPlaced => "Order Placed",
                                OrderStatus.Processing => "Processing",
                                OrderStatus.Completed => "Completed",
                                OrderStatus.Cancelled => "Cancelled",
                                _ => ""
                            };
                            var desc = step switch
                            {
                                OrderStatus.OrderPlaced => "Order has been successfully placed",
                                OrderStatus.Processing => "Seller is preparing the order",
                                OrderStatus.Completed => "Item successfully delivered",
                                OrderStatus.Cancelled => "Order has been cancelled",
                                _ => ""
                            };
                            var date = step switch
                            {
                                OrderStatus.OrderPlaced => Model.OrderPlacedAt?.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt"),
                                OrderStatus.Processing => Model.ProcessingAt?.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt"),
                                OrderStatus.Completed => Model.CompletedAt?.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt"),
                                OrderStatus.Cancelled => Model.CancelledAt?.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt"),
                                _ => "-"
                            };
                            <div class="timeline-item @activeClass">
                                <div class="timeline-marker @markerClass"></div>
                                <div class="timeline-content">
                                    <h6>@title</h6>
                                    <p>@desc</p>
                                    <small>@date</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Items Table -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-cart me-2"></i>Order Items (@Model.OrderItems.Count item@(Model.OrderItems.Count != 1 ? "s" : ""))</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.Product.Name</strong><br />
                                            @if (!string.IsNullOrEmpty(item.Product.Description))
                                            {
                                                <small class="text-muted">@item.Product.Description.Substring(0, Math.Min(50, item.Product.Description.Length))...</small>
                                            }
                                        </td>
                                        <td class="text-end fw-bold">$@item.Price.ToString("0.00")</td>
                                        <td class="text-center">
                                            <span class="badge bg-light text-dark px-2 py-1">@item.Quantity</span>
                                        </td>
                                        <td class="text-end h6 text-success">$@(item.Price * item.Quantity)</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-dark">
                                <tr>
                                    <th colspan="3" class="text-end">Total:</th>
                                    <th class="text-end h4 mb-0">$@Model.TotalAmount.ToString("0.00")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-12 text-end">
            <div class="btn-group">
                <a asp-action="UpdateStatus" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-gear me-2"></i>Update Status
                </a>
                <a asp-action="Print" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                    <i class="bi bi-printer me-2"></i>Print
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Timeline Styles */
    .timeline {
        position: relative;
        padding: 1rem 0;
    }

    .timeline-item {
        position: relative;
        padding-left: 2.5rem;
        margin-bottom: 1.2rem;
    }

        .timeline-item:last-child {
            margin-bottom: 0;
        }

    .timeline-marker {
        position: absolute;
        left: 0;
        top: 0.25rem;
        width: 1.5rem;
        height: 1.5rem;
        border-radius: 50%;
        border: 3px solid white;
        box-shadow: 0 0 0 3px rgba(0,0,0,0.1);
    }

    .timeline-content h6 {
        margin-bottom: 0.25rem;
        font-weight: 600;
    }

    .timeline-content p {
        margin-bottom: 0.25rem;
        color: #6c757d;
    }

    .timeline-content small {
        display: block;
        color: #6c757d;
    }

    /* Table Styles */
    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,0.03);
    }
</style>
