@model IEnumerable<SmartECommerce.Models.Order>

@using SmartECommerce.Models

<h2>All Orders</h2>

@if (!Model.Any())
{
    <p>No orders found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Date</th>
                <th>Total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.User?.UserName</td>
                    <td>@order.OrderDate.ToLocalTime().ToString("g")</td>
                    <td>$@order.TotalAmount</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="UpdateStatus" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Update Status</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
