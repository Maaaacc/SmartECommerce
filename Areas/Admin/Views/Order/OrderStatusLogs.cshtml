@model IEnumerable<SmartECommerce.Models.OrderStatusLog>

<div class="container-fluid py-4">

    <!-- Header: Title + Back Button -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="mb-2 mb-md-0">
            <h1 class="h3 mb-1"><i class="bi bi-journal-text me-2"></i>Order Status Logs</h1>
            <p class="text-muted mb-0">View the history of order status changes</p>
        </div>

        <div class="d-flex align-items-center gap-2">
            <a asp-action="Details" asp-route-id="@(Model.FirstOrDefault()?.OrderId ?? 0)" 
                class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>Back to Orders
            </a>
        </div>
    </div>

    <!-- Logs Card -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model == null || !Model.Any())
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-info-circle fs-4"></i>
                    <p class="mt-2 mb-0">No status logs available for this order.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 100px;">Order #</th>
                                <th style="width: 150px;">Previous Status</th>
                                <th style="width: 150px;">New Status</th>
                                <th style="width: 200px;"><i class="bi bi-person-circle me-1"></i>Changed By</th>
                                <th style="width: 200px;"><i class="bi bi-clock-history me-1"></i>Changed At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold">#@log.OrderId</span>
                                    </td>

                                    <td>
                                        <span class="badge fs-6
                                            @(log.PreviousStatus == OrderStatus.OrderPlaced ? "bg-warning text-dark" :
                                              log.PreviousStatus == OrderStatus.Processing ? "bg-info text-white" :
                                              log.PreviousStatus == OrderStatus.Completed ? "bg-success" :
                                              log.PreviousStatus == OrderStatus.Cancelled ? "bg-danger text-white" : "")">
                                            @log.PreviousStatus
                                        </span>
                                    </td>

                                    <td>
                                        <span class="badge fs-6
                                            @(log.NewStatus == OrderStatus.OrderPlaced ? "bg-warning text-dark" :
                                              log.NewStatus == OrderStatus.Processing ? "bg-info text-white" :
                                              log.NewStatus == OrderStatus.Completed ? "bg-success" :
                                              log.NewStatus == OrderStatus.Cancelled ? "bg-danger text-white" : "")">
                                            @log.NewStatus
                                        </span>
                                    </td>

                                    <td>
                                        @log.ChangedBy
                                    </td>

                                    <td>
                                        @log.ChangedAt.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.03);
    }

    .badge.fs-6 {
        padding: 0.35em 0.65em;
        font-size: 0.875rem;
    }
</style>
