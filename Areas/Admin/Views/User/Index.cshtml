@model IEnumerable<SmartECommerce.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="mb-3">
    <input type="search" name="search" class="form-control mb-2" placeholder="Search users..." value="@ViewData["Search"]" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
