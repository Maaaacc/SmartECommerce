@model IEnumerable<SmartECommerce.Models.Order>

<h2>Your Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders yet.</p>
    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Shop Now</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToLocalTime().ToString("g")</td>
                    <td>$@order.TotalAmount</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
