@model SmartECommerce.Models.ShippingInfo
@{
    ViewData["Title"] = Model.Id == 0 ? "Add Shipping Information" : "Edit Shipping Information";
}
<h2>@ViewData["Title"]</h2>
<form asp-controller="Account" asp-action="ShippingInfo" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />  <!-- ADD THIS -->

    <div class="mb-3">
        <label asp-for="RecipientName" class="form-label"></label>
        <input asp-for="RecipientName" class="form-control" required />
        <span asp-validation-for="RecipientName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AddressLine1" class="form-label"></label>
        <input asp-for="AddressLine1" class="form-control" required />
        <span asp-validation-for="AddressLine1" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AddressLine2" class="form-label"></label>
        <input asp-for="AddressLine2" class="form-control" />
        <span asp-validation-for="AddressLine2" class="text-danger"></span>
    </div>
    <div class="row g-3 mb-3">
        <div class="col-md-4">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" required />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="State" class="form-label"></label>
            <input asp-for="State" class="form-control" required />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="ZipCode" class="form-label"></label>
            <input asp-for="ZipCode" class="form-control" required />
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Country" class="form-label"></label>
        <input asp-for="Country" class="form-control" required />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">
        @(Model.Id == 0 ? "Add Shipping Info" : "Update Shipping Info")
    </button>
    <a asp-controller="Checkout" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}