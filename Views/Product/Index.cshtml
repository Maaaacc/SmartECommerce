@model IEnumerable<SmartECommerce.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="get" class="d-flex mb-3">
        <input type="search" name="search" class="form-control me-2"
               placeholder="Search products..." value="@Context.Request.Query["search"]" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@Url.Content($"~/images/products/{product.ImageUrl}")" class="card-img-top" alt="@product.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="text-success fw-bold">$@product.Price</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
