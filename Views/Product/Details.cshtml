@model SmartECommerce.Models.ViewModels.ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <a href="@Url.Action("Index", "Product")" class="btn btn-link mb-3">&larr; Back to Products</a>

    <div class="row gy-4">
        <!-- Product Image -->
        <div class="col-md-6 text-center">
            <img src="@Url.Content($"~/images/products/{Model.Product.ImageUrl}")"
                 alt="@Model.Product.Name"
                 class="img-fluid rounded shadow-sm"
                 style="max-height: 450px; object-fit: contain;" />
        </div>

        <!-- Product Info -->
        <div class="col-md-6 d-flex flex-column">
            <h2 class="fw-bold mb-3">@Model.Product.Name</h2>

            <h5 class="mb-3 text-muted">@Model.Product.Category?.Name</h5>

            <p class="mb-4" style="white-space: pre-wrap;">
                @if (string.IsNullOrWhiteSpace(Model.Product.Description))
                {
                    <em>No description available.</em>
                }
                else
                {
                    @Model.Product.Description
                }
            </p>

            <h4 class="mb-3">
                Price: <span class="text-success fw-bold">$@Model.Product.Price</span>
            </h4>

            <div>
                @if (Model.Product.Stock > 0)
                {
                    <span class="badge bg-success mb-3 d-inline-block">In Stock: @Model.Product.Stock</span>
                }
                else
                {
                    <span class="badge bg-danger mb-3 d-inline-block">Out of Stock</span>
                }
            </div>

            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mb-0">
                <input type="hidden" name="productId" value="@Model.Product.Id" />
                <button type="submit" class="btn btn-primary btn-lg w-100" @(Model.Product.Stock == 0 ? "disabled" : "")>
                    @(Model.Product.Stock > 0 ? "Add to Cart" : "Unavailable")
                </button>
            </form>
        </div>


    </div>

    <section class="my-5">
        <h3 class="mb-4">More Products</h3>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var product in Model.MoreProducts)  @* Pass this list from your controller *@
            {
                <div class="col">
                    <div class="card h-100 shadow-sm" onclick="location.href='@Url.Action("Details", "Product", new { id = product.Id })'">
                        <div class="position-relative" style="height: 220px; overflow: hidden;">
                            <img src="@Url.Content($"~/images/products/{product.ImageUrl}")"
                                 class="card-img-top"
                                 alt="@product.Name"
                                 style="object-fit: cover; height: 100%; width: 100%;" />
                            @if (product.Stock == 0)
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">Out of Stock</span>
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-success fw-bold">$@product.Price</span>
                                <span class="text-muted">@product.Category?.Name</span>
                            </div>
                            <p class="text-muted small mb-3">
                                @(string.IsNullOrWhiteSpace(product.Description)
                                    ? "No description available."
                                    : (product.Description.Length > 60
                                    ? product.Description.Substring(0, 60) + "..."
                                    : product.Description))
                            </p>
                            <div class="mt-auto">
                                @if (product.Stock > 0)
                                {
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" onsubmit="event.stopPropagation()" class="mt-auto">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-primary w-100 py-2">Add to Cart</button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-secondary w-100" disabled>Out of Stock</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

</div>
