@model SmartECommerce.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="text-center hero">
    <h1 class="fw-bold">Discover Premium Products</h1>
    <p class="text-muted fs-5">Shop the latest tech, electronics, and accessories with free shipping on orders over $100.</p>
    <a href="/Product" class="btn btn-dark px-4 py-2">Shop Now</a>
</div>

<!-- Categories -->
<section class="my-5">
    <h2 class="text-center fw-semibold mb-4">Browse Categories</h2>
    <div class="row text-center justify-content-center">
        @foreach (var category in Model.Categories)
        {
            // Only show if category has at least one product
            var productCount = category.Products?.Count() ?? 0;
            if (productCount > 0)
            {
                <div class="col-md-2 col-6 mb-4">
                    <a href="@Url.Action("Index","Product", new{category = category.Id})"
                       class="text-decoration-none text-darl">
                        <div class="card border-0 shadow-sm p-3 h-100">
                            <div class="fs-1 mb-2">📦</div>
                            <h6 class="fw-bold">@category.Name</h6>
                            <p class="text-muted">@productCount products</p>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</section>

<!-- Featured Products -->
<section class="my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold">Featured Products</h2>
        <a href="/Product" class="text-decoration-none">View All Products →</a>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col">
                <div class="card h-100 shadow-sm" onclick="location.href='@Url.Action("Details", "Product", new { id = product.Id })'">
                    <div class="position-relative" style="height: 220px; overflow: hidden;">
                        <img src="@Url.Content($"~/images/products/{product.ImageUrl}")"
                             class="card-img-top"
                             alt="@product.Name"
                             style="object-fit: cover; height: 100%; width: 100%;" />
                        @if (product.Stock == 0)
                        {
                            <span class="badge bg-danger position-absolute top-0 end-0 m-2">Out of Stock</span>
                        }
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-success fw-bold">$@product.Price</span>
                            <span class="text-muted">@product.Category?.Name</span>
                        </div>
                        <p class="text-muted small mb-3">
                            @(string.IsNullOrWhiteSpace(product.Description)
                                ? "No description available."
                                : (product.Description.Length > 60
                                ? product.Description.Substring(0, 60) + "..."
                                : product.Description))
                        </p>
                        <div class="mt-auto">
                            @if (product.Stock > 0)
                            {
                                <form asp-controller="Cart" asp-action="AddToCart" method="post" onsubmit="event.stopPropagation()" class="mt-auto">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button type="submit" class="btn btn-primary w-100 py-2">Add to Cart</button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-secondary w-100" disabled>Out of Stock</button>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</section>

