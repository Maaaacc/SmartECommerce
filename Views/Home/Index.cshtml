@model SmartECommerce.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

    <!-- Hero Section -->
<div class="text-center hero">
    <h1 class="fw-bold">Discover Premium Products</h1>
    <p class="text-muted fs-5">Shop the latest tech, electronics, and accessories with free shipping on orders over $100.</p>
    <a href="/Product" class="btn btn-dark px-4 py-2">Shop Now</a>
</div>



    <!-- Categories -->
    <section class="my-5">
        <h2 class="text-center fw-semibold mb-4">Browse Categories</h2>
        <div class="row text-center justify-content-center">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-2 col-6 mb-4">
                    <div class="card border-0 shadow-sm p-3">
                        <div class="fs-1 mb-2">📦</div>
                        <h6 class="fw-bold">@category.Name</h6>
                        <p class="text-muted">@category.Products.Count() products</p>
                    </div>
                </div>
            }
        </div>
    </section>
<!-- Featured Products -->
<section class="my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold">Featured Products</h2>
        <a href="/Product" class="text-decoration-none">View All Products →</a>
    </div>

    <div class="row">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="position-relative">
                        <img src="@product.ImageUrl" 
                             alt="@product.Name" 
                             class="card-img-top rounded-top" 
                             style="height: 220px; object-fit: cover;">
                        @if (product.Stock == 0)
                        {
                            <span class="badge bg-danger position-absolute top-0 end-0 m-2">Out of Stock</span>
                        }
                    </div>
                    <div class="card-body">
                        <h6 class="fw-bold text-dark mb-1">@product.Name</h6>
                        <p class="text-muted small mb-2">@product.Category?.Name</p>
                        <p class="fw-semibold text-dark mb-1">$@product.Price</p>
                        <p class="text-muted small">
                            @(string.IsNullOrWhiteSpace(product.Description) 
                                ? "No description available." 
                                : (product.Description.Length > 60 
                                    ? product.Description.Substring(0, 60) + "..." 
                                    : product.Description))
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        @if (product.Stock > 0)
                        {
                            <a href="/Product/Details/@product.Id" class="btn btn-sm btn-dark w-100">Add to Cart</a>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-secondary w-100" disabled>Out of Stock</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</section>

